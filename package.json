{
  "name": "npm-dep-graph",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "index.mjs",
  "exports": {
    ".": "index.mjs"
  },
  "description": "analyse npm dependencies",
  "keywords": [
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme index.mjs --section=API",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint index.mjs"
  },
  "dependencies": {
    "fetch-h2": "^2.2.0",
    "mf-styling": "arlac77/mf-styling",
    "pacote": "^11.1.8"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "ava": "^3.13.0",
    "c8": "^7.3.4",
    "documentation": "^13.0.2",
    "npm-pkgbuild": "^6.12.11",
    "semantic-release": "^17.2.1"
  },
  "engines": {
    "node": ">=14.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/npm-dep-graph.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-dep-graph/issues"
  },
  "homepage": "https://github.com/arlac77/npm-dep-graph#readme",
  "config": {
    "api": "/services/npm-dep-graph/api",
    "base": "/services/npm-dep-graph/",
    "proxyTarget": "https://somewhere/"
  },
  "pacman": {
    "groups": "{{group}}",
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/npm-dep-graph/frontend",
    "depends": {
      "systemd": ">=246.6",
      "nginx-mainline": ">=1.19.3"
    },
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    }
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ],
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-esm-only",
      "arlac77/template-github",
      "arlac77/template-systemd",
      "arlac77/template-web-app",
      "arlac77/template-nginx",
      "arlac77/template-pacman"
    ]
  }
}
