{
  "name": "npm-dep-graph",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "description": "analyse npm dependencies",
  "keywords": [
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme --section=API ./src/**/*.mjs",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/**/*.mjs"
  },
  "dependencies": {
    "fetch-h2": "^3.0.0",
    "mf-styling": "arlac77/mf-styling",
    "pacote": "^13.0.0"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "ava": "^4.2.0",
    "c8": "^7.11.0",
    "documentation": "^13.2.5",
    "npm-pkgbuild": "^8.3.16",
    "semantic-release": "^19.0.2"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/npm-dep-graph.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-dep-graph/issues"
  },
  "homepage": "https://github.com/arlac77/npm-dep-graph#readme",
  "config": {
    "api": "/services/npm-dep-graph/api",
    "base": "/services/npm-dep-graph/",
    "proxyTarget": "https://somewhere/"
  },
  "pkg": {
    "content": {
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf",
      "${install.dir}": {
        "base": "public/"
      }
    },
    "hooks": "pkg/hooks.sh",
    "groups": "web",
    "depends": {
      "nginx-mainline": ">=1.21.4",
      "systemd": ">=250.4"
    },
    "install.dir": "/services/${name}/frontend/"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-esm-only",
      "arlac77/template-nginx",
      "arlac77/template-pacman",
      "arlac77/template-systemd",
      "arlac77/template-web-app"
    ]
  }
}
