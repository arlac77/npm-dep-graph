{
  "name": "npm-dep-graph",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "description": "analyse npm dependencies",
  "keywords": [
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme --section=API ./src/**/*.mjs",
    "lint": "npm run lint:docs && npm run lint:css",
    "lint:docs": "documentation lint ./src/**/*.mjs",
    "lint:css": "stylelint ./src/*.css",
    "dev": "vite",
    "serve": "vite preview"
  },
  "dependencies": {
    "mf-styling": "^1.0.0",
    "pacote": "^13.3.0"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "ava": "^4.2.0",
    "c8": "^7.11.2",
    "documentation": "^13.2.5",
    "npm-pkgbuild": "^10.2.0",
    "semantic-release": "^19.0.2",
    "stylelint": "^14.8.2",
    "stylelint-config-standard": "^25.0.0",
    "vite": "^2.9.8"
  },
  "optionalDependencies": {
    "mf-hosting": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/npm-dep-graph.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-dep-graph/issues"
  },
  "homepage": "https://github.com/arlac77/npm-dep-graph#readme",
  "config": {
    "base": "/services/npm-dep-graph"
  },
  "pkgbuild": {
    "content": {
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf",
      "${install.dir}": {
        "base": "public/"
      }
    },
    "hooks": "pkg/hooks.sh",
    "groups": "web",
    "depends": {
      "nginx-mainline": ">=1.21.4",
      "systemd": ">=250.5"
    },
    "http.base.path": "/services/${name}",
    "install.dir": "/services/${name}/frontend/"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --verbose"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-esm-only",
      "arlac77/template-nginx",
      "arlac77/template-pacman",
      "arlac77/template-systemd",
      "arlac77/template-web-app",
      "arlac77/template-vite"
    ]
  }
}
