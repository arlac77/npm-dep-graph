{
  "name": "npm-dep-graph",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "description": "analyse npm dependencies",
  "keywords": [
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "test": "npm run test:cafe && npm run test:ava",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*.js -s build/test --page-request-timeout 3000 --app-init-delay 3000 --app \"vite preview\"",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme --section=API ./src/**/*.mjs",
    "lint": "npm run lint:docs && npm run lint:css",
    "lint:docs": "documentation lint ./src/**/*.mjs",
    "lint:css": "stylelint ./src/*.css",
    "preview": "vite preview"
  },
  "dependencies": {
    "mf-styling": "^1.7.23",
    "pacote": "^13.6.1"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "ava": "^5.0.1",
    "c8": "^7.12.0",
    "documentation": "^14.0.0",
    "npm-pkgbuild": "^10.15.1",
    "semantic-release": "^19.0.5",
    "stylelint": "^14.13.0",
    "stylelint-config-standard": "^28.0.0",
    "testcafe": "^2.0.1",
    "vite": "^3.1.4"
  },
  "optionalDependencies": {
    "mf-hosting": "^1.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/npm-dep-graph.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-dep-graph/issues"
  },
  "homepage": "https://github.com/arlac77/npm-dep-graph#readme",
  "pkgbuild": {
    "content": {
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf",
      "${install.dir}": "build/"
    },
    "hooks": "pkg/hooks.sh",
    "groups": "examples"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-css",
      "arlac77/template-pacman",
      "arlac77/template-testcafe",
      "arlac77/template-vite",
      "arlac77/template-web-app"
    ]
  }
}
